! Set '-' key to '['
keycode 20 = bracketleft braceleft bracketleft braceleft guillemotleft U2039 guillemotleft

! Set '+' key to ']'
keycode 21 = bracketright braceright bracketright braceright guillemotright U203A guillemotright

! Set '[' key to ';'
keycode 34 = semicolon colon semicolon colon semicolon colon semicolon colon

! Set ']' key to '='
keycode 35 = equal plus equal plus multiply division multiply

! Set ';' key to '''
keycode 47 = apostrophe quotedbl apostrophe quotedbl otilde Otilde otilde

! Set ''' key to '-'
keycode 48 = minus underscore minus underscore endash emdash endash

! Swap left Ctrl and left Alt
clear control
clear mod1
keycode 37 = Alt_L Meta_L
keycode 64 = Control_L
add control = Control_L Control_R
add mod1 = Alt_L Meta_L

! Make caps lock an additional backspace
keycode 66 = BackSpace BackSpace BackSpace BackSpace BackSpace BackSpace BackSpace BackSpace
clear lock
